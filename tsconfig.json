/* Visit https://aka.ms/tsconfig to read more about this file */
{
	"include": ["source"],
	"exclude": ["node_modules"],

	"compilerOptions": {                                      // These options make up the bulk of TypeScriptâ€™s configuration and it covers how the language should work.
		/* Type Checking */
		"strict": true,                                         // Enable all strict type-checking options.

		/* Emit */
		"noEmit": true,                                         // Disable emitting files from a compilation.

		/* Interop Constraints */
		"forceConsistentCasingInFileNames": true,               // Ensure that casing is correct in imports.

		/* Language and Environment */
		"target": "ESNext",                                     // Set the JavaScript language version for emitted JavaScript and include compatible library declarations.

		/* Modules */
		"module": "NodeNext",                                   // Specify what module code is generated.
		"moduleResolution": "NodeNext",                         // Specify how TypeScript looks up a file from a given module specifier.
		"rootDir": "./",                                        // Specify the root folder within your source files.
		"baseUrl": "./source",                                  // Specify the base directory to resolve non-relative module names.
		"resolveJsonModule": true,                              // Enable importing .json files.
		"allowImportingTsExtensions": true,                     // Enable importing files with a specified TypeScript extension.
		"paths": {
			"@library/*": ["library/*/main.mts"],
			"@challenges/*": [
				/* Code Signal Arcade Intro */
				"challenges/code-signal/arcade/intro/the-journey-begins/*/main.mts",
				"challenges/code-signal/arcade/intro/edge-of-the-ocean/*/main.mts",
				"challenges/code-signal/arcade/intro/smooth-sailing/*/main.mts",
				"challenges/code-signal/arcade/intro/exploring-the-waters/*/main.mts",
				"challenges/code-signal/arcade/intro/island-of-knowledge/*/main.mts",
				"challenges/code-signal/arcade/intro/rains-of-reason/*/main.mts",
				"challenges/code-signal/arcade/intro/through-the-fog/*/main.mts",
				"challenges/code-signal/arcade/intro/diving-deeper/*/main.mts",
				"challenges/code-signal/arcade/intro/dark-wilderness/*/main.mts",
				"challenges/code-signal/arcade/intro/rainbow-of-clarity/*/main.mts",
				"challenges/code-signal/arcade/intro/land-of-logic/*/main.mts",
			],
		},
	},
}
